@model List<coba.Models.Database.ContactMessage>
@{
    ViewData["Title"] = "List of Contact US";
}

<div class="container">
    <div class="row">
        <table class="table table-default">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                    <tr>
                        @{
                            var row = i + 1;
                            @* Output.Write(row); *@
                        }
                    <td>@row</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Email</td>
                </tr>
                <tr>
                    <td colspan="3">
                        <b>Message</b> : @Model[i].Message
                    </td>
                </tr>
            }
            </tbody>
        </table>        
    </div>
</div>